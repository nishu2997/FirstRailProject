<div class="course-show">
    <div class="course-show-title">
        <p>Course Details</p>
    </div>
    <div class="course-show-body">
        <div class="course-show-course-name">
            <p class="p-gray">Course Name</p>
            <p><%= @course.name %></p>
        </div>
        <div class="course-show-course-code">
            <p class="p-gray">Course Code</p>
            <p><%= @course.courseCode %></p>
        </div>
    </div>
    <div class="course-show-footer">
        <div class="c-s-f-back-link">
            <%= link_to "back", courses_path%>
        </div>
        <%if (@current_user != nil && @current_user != "admin") %>
            <div class="c-s-f-enroll-link 
            <%= (Enroll.find_by(student_id: @current_user.id, course_id: @course.id) == nil and @course.department_id == @current_user.department_id)? "" : "inactive" %>">
                <%= button_to "Enroll This Course", student_enrolls_path(@current_user), params: {enroll: {student_id: @current_user.id, course_id: @course.id}}%>
            </div>
        <%end%>
    </div>
</div>